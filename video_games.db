DROP TABLE IF EXISTS games;
DROP TABLE IF EXISTS developers;

CREATE TABLE developers (
    id INTEGER PRIMARY KEY,
    name TEXT,
    location TEXT,
    founded_on DATE,
    games INTEGER
);

CREATE TABLE games (
    id INTEGER PRIMARY KEY,
    title TEXT,
    release_date DATE,
    platform TEXT,
    genre TEXT,
    playType TEXT,
    developer_id INTEGER,
    FOREIGN KEY (developer_id) REFERENCES developers(id)
);

